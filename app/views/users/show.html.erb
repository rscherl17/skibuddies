<div class="page-header">
  <h3><%= @user.email %></h3>
</div>

<!-- A User has many comments -->

<div class="row">
  <div class="col-md-6">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Comments
      </li>

      <% @user.comments.each do |comment| %>
        <li class="list-group-item">
          <a href="/trails/<%= comment.trail.id %>">
            <%= comment.trail.trail_name %>
          </a>
            : <%= comment.comment %>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/comments/<%= comment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == comment.user %>
              <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

<!-- A User has many photos -->

  <div class="col-md-6">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Photos
      </li>

      <% @user.photos.each do |photo| %>
        <li class="list-group-item"><div class="row">
          <div class="col-sm-10">
          <a href="/photos/<%= photo.id %>">
            <img class="img-responsive" src="<%= photo.image %>">
          </a>
        </div>
          <div class="col-sm-2"><div class="btn-group btn-group-xs photo-buttons">
            <a href="/photos/<%= photo.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == photo.user %>
              <a href="/photos/<%= photo.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_photo/<%= photo.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="row">
  <div class="col-md-12 mb-2">

    <div class="btn-group btn-group-justified">
      <a href="javascript:history.back()" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
