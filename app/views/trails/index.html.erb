<div class="page-header">
  <h1>
    Trails
    <a href="/trails/new" class="btn btn-lg btn-success">New Trail</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "trails_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :trail_name_cont, "Trail name contains" %>
    <%= f.text_field :trail_name_cont, :class => "form-control", :placeholder => "Trail name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :mountain_mountain_name_cont, "Mountain mountain_name contains" %>
      <%= f.text_field :mountain_mountain_name_cont, :class => "form-control", :placeholder => "Mountain mountain_name contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Comment Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='commentsgteqcreated_atPicker'>
                  <%= f.text_field :comments_created_at_gteq, :class => "form-control", :placeholder => "Comment Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='commentslteqcreated_atPicker'>
                  <%= f.text_field :comments_created_at_lteq, :class => "form-control", :placeholder => "Comment Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#commentsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#commentslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#commentsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#commentslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#commentslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#commentsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/trails" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#trails_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Trail name</th>
        <th>Mountain</th>
        <th>Actions</th>
      </tr>

      <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.trail_name %></td>
        <td>
          <% if trail.mountain.present? %>
            <a href="/mountains/<%= trail.mountain.id %>">
              <%= trail.mountain.mountain_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/trails/<%= trail.id %>" class="btn btn-primary">Show</a>
          <a href="/trails/<%= trail.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_trail/<%= trail.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @trails, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
