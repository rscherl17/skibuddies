<div class="page-header">
  <h3>Trail #<%= @trail.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Trail name</dt>
      <dd><%= @trail.trail_name %></dd>

      <dt>Mountain</dt>
      <dd><%= @trail.mountain_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/trails" class="btn btn-primary">
        Back
      </a>
      <a href="/trails/<%= @trail.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_trail/<%= @trail.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
